<div class="mt-4">
  <h3>Đăng khóa học</h3>
  <form method="post" action="store">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input class="form-control" type="text" id="name" name="name" />

    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
      <input
        class="form-control"
        type="text"
        id="description"
        name="description"
      />

    </div>
    <div class="form-group">
      <label for="videoID">Video</label>
      <input class="form-control" type="text" id="videoID" name="videoID" />

    </div>
    <div class="form-group">
      <label for="slug">Slug</label>
      <input class="form-control" type="text" id="slug" name="slug" />

    </div>

    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>