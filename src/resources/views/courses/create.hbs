<div class="mt-4">
  <h3>Đăng khóa học</h3>
  <form method="post" action="store">
    <div class="form-group">
      <!-- {{! for được dùng khi click vào label thì sẽ focus vô input, label-for = input-id
      name sẽ được submit }} -->
      <label for="name">Tên khóa học</label>
      <input class="form-control" type="text" id="name" name="name" />

    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        type="text"
        id="description"
        name="description"
      ></textarea>
    </div>
    <div class="form-group">
      <label for="videoID">Video</label>
      <input class="form-control" type="text" id="videoID" name="videoID" />

    </div>

    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>