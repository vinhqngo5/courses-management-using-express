<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4">
        <div class="card card-course-item" style=";">
          <a href="/courses/{{this.slug}}">
            <img
              class="card-img-top card-img-top--modified"
              src="{{this.image}}"
              alt="{{this.name}}"
            />
          </a>

          <div class="card-body">
            <a href="/courses/{{this.slug}}"><h5
                class="card-title"
              >{{this.name}}</h5></a>

            <p class="card-text">{{this.description}}</p>
            <a
              href="/courses/{{this.slug}}"
              class="btn btn-primary btn-primary--modified"
            >Xem khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>