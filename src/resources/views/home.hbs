<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4">
        <div class="card card-course-item" style=";">
          <a href="/courses/{{this.slug}}">
            <div class="card-img-top-container">
              <div
                class="card-img-top--modified"
                style="background-image:url('{{this.image}}');"
              ></div>
            </div>

          </a>

          <div class="card-body">
            <a class="card-title--modified" href="/courses/{{this.slug}}"><h5
                class="card-title"
              >{{this.name}}</h5></a>

            <p class="card-text card-text-break">{{this.description}}</p>
            <a
              href="/courses/{{this.slug}}"
              class="btn btn-primary btn-primary--modified"
            >Xem khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>